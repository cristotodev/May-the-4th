---
import Github from "../icons/github.astro";
---

<header class="flex justify-center">
  <div
    class="h-[50px] w-1/3 bg-white flex items-center justify-between my-6 mx-4 px-4 py-1 rounded-md shadow-lg"
  >
    <a
      class="font-mono text-base cursor-pointer text-black no-underline font-bold"
      href="/">Inicio</a
    >
    <div class="bg-white py-1 px-2 inline rounded-md">
      <a
        href="https://github.com/cristotodev/May-the-4th"
        target="_blank"
        aria-label="Icono Github"
      >
        <Github stroke="#000000" />
      </a>
    </div>
  </div>
</header>
