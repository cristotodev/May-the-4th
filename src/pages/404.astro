---
import { Image } from "astro:assets";
import Footer from "../sections/Footer.astro";
import DarkvaderImage from "../images/404/darkvader.webp";
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>May the 4th - cristotodev</title>
  </head>
  <body
    class="bg-[url('/fondo.jpg')] flex items-center justify-center min-h-screen"
  >
    <div class="text-white">
      <div class="text-center mb-12">
        <Image
          src={DarkvaderImage}
          alt="Star Wars 404"
          class="w-2/4 mx-auto mix-blend-lighten"
          loading="lazy"
        />
        <h1 class="text-6xl font-bold">404</h1>
        <p class="text-2xl mt-4">Parece que est√°s perdido en el espacio</p>
        <a
          href="/"
          class="mt-8 inline-block bg-yellow-500 hover:bg-yellow-600 text-black font-bold py-2 px-4 rounded"
          aria-label="Volver a la galaxia"
        >
          Volver a la galaxia
        </a>
      </div>
      <Footer />
    </div>
  </body>
</html>
